<?xml version="1.0" standalone="no"?>

<unit>
	<parameters>
		<size value="3"/>
		<height value="3"/>
		<max-hp value="5000" regeneration="1"/>
		<max-ep value="0"/>
		<armor value="45"/>	
		<armor-type value="metal"/>				
		<sight value="10"/>
		<time value="65"/>	
		<multi-selection value="true"/>	
		<cellmap value="false"/>
		<levels>
			<level name="elite" kills="5"/>
		</levels>
		<fields>
			<field value="any_water"/>
		</fields>	
		<properties/>
		<light enabled="false"/>
		<unit-requirements>
			<unit name="castle"/>
		</unit-requirements>
							
		<upgrade-requirements>							
			<upgrade name="robotics"/>						
		</upgrade-requirements>
		
		<resource-requirements>
			<resource name="wood" amount="100"/>
			<resource name="gold" amount="250"/>
			<resource name="food" amount="1"/>
			<resource name="energy" amount="1"/>				
		</resource-requirements>
		<resources-stored/>
		<image path="images/unit_archer.bmp"/>
		<image-cancel path="images/tech_cancel.bmp"/>
		<meeting-point value="false"/>
		<selection-sounds enabled="true">
			<sound path="sounds/guard_select1.wav"/>					
		</selection-sounds>
		<command-sounds enabled="true">
			<sound path="sounds/guard_ack1.wav"/>					
		</command-sounds>
	</parameters>

	<skills>
	
		<skill>
			<type value="stop"/>
			<name value="stop_skill"/>		
			<ep-cost value="0"/>
			<speed value="1000"/>
			<anim-speed value="25"/>
			<animation path="models/dreadnought.g3d"/>
			<particles value="true">
				
				<particle-file path="smoke_particles.xml"/>

				<particle-file path="smoke_particles2.xml"/>

			</particles>
			<sound enabled="false"/>
		</skill>
		
		<skill>
			<type value="move"/>
			<name value="move_skill"/>		
			<ep-cost value="0"/>
			<speed value="150"/>
			<anim-speed value="150"/>
			<animation path="models/dreadnought_move.g3d"/>
			<particles value="true">
				
				<particle-file path="smoke_particles.xml"/>

				<particle-file path="smoke_particles2.xml"/>
				
			</particles>
			<sound enabled="false"/>
			<sound enabled="true" start-time="0.6">
				<sound-file path="sounds/catapult_walk1.wav"/>
				<sound-file path="sounds/catapult_walk2.wav"/>
				<sound-file path="sounds/catapult_walk3.wav"/>
				<sound-file path="sounds/catapult_walk4.wav"/>
				<sound-file path="sounds/catapult_walk5.wav"/>
				<sound-file path="sounds/catapult_walk6.wav"/>
			</sound>
		</skill>

		<skill>
			<type value="move"/>
			<name value="charge_skill"/>		
			<ep-cost value="0"/>
			<speed value="220"/>
			<anim-speed value="220"/>
			<animation path="models/dreadnought_move.g3d"/>
			<particles value="true">
				
				<particle-file path="smoke_particles.xml"/>

				<particle-file path="smoke_particles2.xml"/>
	
			</particles>
			
			<sound enabled="false"/>
		</skill>

		<skill>
			<type value="attack"/>
			<name value="attack_skill"/>		
			<ep-cost value="0"/>
			<speed value="50"/>
			<anim-speed value="50"/>
			<animation path="models/dreadnought_attack.g3d"/>
			<particles value="true">
				<particle-file path="cannonsmoke_particles.xml"/>
				<particle-file path="smoke_particles.xml"/>

				<particle-file path="smoke_particles2.xml"/>

			</particles>			
		
			<sound enabled="true" start-time="0.2">
				<sound-file path="sounds/airship_attack1.wav"/>					
			</sound>
			<attack-strenght value="300"/>				
			<attack-var value="150"/>				
			<attack-range value="8"/>				
			<attack-type value="piercing"/>
			<attack-start-time value="0.2"/>
			<attack-fields>
				<field value="land"/>
			</attack-fields>
			<projectile value="true">				
				<particle value="true" path="particle_proj.xml"/>
					
				<sound enabled="true">
					<sound-file path="sounds/airship_hit.wav"/>	
				</sound>
			</projectile>
			<splash value="true">				
				<radius value="1"/>			
				<damage-all value="true"/>			
				<particle value="true" path="particle_splash.xml"/>			
			</splash>
		</skill>
		
		<skill>
			<type value="die"/>
			<name value="die_skill"/>		
			<ep-cost value="0"/>
			<speed value="60"/>
			<anim-speed value="60"/>
			<animation path="models/dreadnought_sunk.g3d"/>
			<particles value="true">										
				<particle-file path="die_smoke_particles.xml"/>									
				<particle-file path="die_glow_particles.xml"/>									
			</particles>
			<sound enabled="true" start-time="0">
				<sound-file path="sounds/catapult_die3.wav"/>
			</sound>			
			<fade value="false"/>
		</skill>


	</skills>

	<!-- *** commands *** -->
	
	<commands>
		
		<command>
			<type value= "stop"/>
			<name value="stop"/>
			<image path="images/tech_halt.bmp"/>
			<unit-requirements/>
			<upgrade-requirements/>
			<stop-skill value="stop_skill"/>
		</command>

		<command>
			<type value="move"/>
			<name value="move"/>
			<image path="images/tech_move.bmp"/>
			<unit-requirements/>
			<upgrade-requirements/>
			<move-skill value="move_skill"/>
		</command>

		<command>
			<type value="attack"/>
			<name value="attack"/>
			<image path="images/tech_shot.bmp"/>
			<unit-requirements/>
			<upgrade-requirements/>
			<move-skill value="charge_skill"/>
			<attack-skill value="attack_skill"/>
		</command>
		
		<command>
			<type value="attack_stopped"/>
			<name value="hold_position"/>
			<image path="images/tech_hold.bmp"/>
			<unit-requirements/>
			<upgrade-requirements>
				
			</upgrade-requirements>
			<stop-skill value="stop_skill"/>
			<attack-skill value="attack_skill"/>
		</command>
		
	</commands>
</unit>
