<?xml version="1.0" standalone="no"?>

<unit>
	<parameters>
		<size value="3"/>
		<height value="6"/>
		<max-hp value="7500" regeneration="0"/>
		<max-ep value="0"/>
		<armor value="20"/>	
		<armor-type value="stone"/>			
		<sight value="16"/>
		<time value="140"/>	
		<multi-selection value="false"/>
		<cellmap value="true" >  
			<row value="010" />  <!-- ADICIONADAS ESTAS LINHAS... -->
			<row value="111" />
			<row value="010" />
		</cellmap>
		<levels/>	
		<fields>
			<field value="land"/>
		</fields>	
		<properties>
			<property value="burnable"/>
		</properties>
		<light enabled="false"/>
		<unit-requirements/>
		<upgrade-requirements>
			<upgrade name="gunpowder" /> 
		</upgrade-requirements>
		<resource-requirements>
			<resource name="gold" amount="250"/>
			<resource name="stone" amount="250"/>			
		</resource-requirements>
		<resources-stored/>
		<image path="images/deftower.bmp"/>
		<image-cancel path="../worker/images/dstop.bmp"/>
		<meeting-point value="false"/>
		<selection-sounds enabled="false"/>
		<command-sounds enabled="false"/>
	</parameters>

	<skills>
	
		<skill>
			<type value="stop"/>
			<name value="stop_skill"/>		
			<ep-cost value="0"/>
			<speed value="300"/>
			<anim-speed value="100"/>
			<animation path="models/defense_tower.g3d"/>
			<sound enabled="false"/>
		</skill>

		<skill>
			<type value="be_built"/>
			<name value="be_built_skill"/>		
			<ep-cost value="0"/>
			<speed value="300"/>
			<anim-speed value="300"/>
			<animation path="models/defense_tower_construct.g3d"/>
			<sound enabled="false"/>
		</skill>

		<skill>
			<type value="attack"/>
			<name value="attack_skill"/>		
			<ep-cost value="0"/>
			<speed value="40"/>
			<anim-speed value="45"/>
			<animation path="models/defense_tower.g3d"/>
			<sound enabled="false"/>
			<attack-strenght value="150"/>
			<attack-var value="40"/>
			<attack-range value="12"/>
			<attack-type value="impact"/>
			<attack-start-time value="0.3"/>
			<attack-fields>
				<field value="land"/>
				<field value="air"/>
			</attack-fields>
			<projectile value="true">
				<particle value="true" path="particle_proj.xml"/>
			<sound enabled="true" start-time="0.5">
				<sound-file path="../canoneer/sounds/explode.wav"/>
				<sound-file path="../canoneer/sounds/explodemini.wav"/>
			</sound>
				
			</projectile>
			<splash value="false"/>
		</skill>
		
		<skill>
			<type value="upgrade"/>	
			<name value="upgrade_skill"/>	
			<ep-cost value="0" />
			<speed value="300" />
			<anim-speed value="75" />
			<animation path="models/defense_tower.g3d" />
			<sound enabled="false" />
		</skill>

		<skill>
			<type value="die"/>
			<name value="die_skill"/>		
			<ep-cost value="0"/>
			<speed value="300"/>
			<anim-speed value="300"/>
			<animation 			path="../stronghold/destruction_models/defensedestruct.g3d"/>
			<sound enabled="false"/>		
			<fade value="false"/>
		</skill>

	</skills>
	
	<commands>

		<command>
			<type value="stop"/>
			<name value="attack_off"/>
			<image path="../worker/images/dstop.bmp"/>
			<unit-requirements/>
			<upgrade-requirements/>
			<stop-skill value="stop_skill"/>
		</command>

		<command>
			<type value="attack_stopped"/>
			<name value="attack_on"/>
			<image path="../worker/images/attack.bmp"/>
			<unit-requirements/>
			<upgrade-requirements/>
			<attack-skill value="attack_skill"/>
                        <stop-skill value="stop_skill"/>
		</command>

		<command>
			<type value="upgrade"/>
			<name value="fortify"/>
			<image path="images/fortify.bmp" />
			<unit-requirements />
			<upgrade-requirements />
			<upgrade-skill value="upgrade_skill"/>
			<produced-upgrade name="fortify"/>
		</command>

	</commands>
</unit>
